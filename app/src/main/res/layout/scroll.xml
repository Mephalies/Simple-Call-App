<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include
                android:id="@+id/incl_cardview_contact_card_main_1"
                layout="@layout/cardview_contact_card_main"
                android:layout_width="match_parent"
                android:layout_height="350dp" />


            <include
                android:id="@+id/incl_cardview_contact_card_main_2"
                layout="@layout/cardview_contact_card_main"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/incl_cardview_contact_card_main_1"
                app:layout_constraintTop_toBottomOf="@+id/incl_cardview_contact_card_main_1" />


        </LinearLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>